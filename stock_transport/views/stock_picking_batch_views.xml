<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
<!-- action for stock picking batch views -->
        <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
            <field name="view_mode">tree,form,kanban,graph,gantt</field>
            <field name="context">{
            'graph_groupbys':['scheduled_date:day','vehicle_category_id'],
            }</field>
        </record>

<!-- inherited form view -->
        <record id = 'stock_picking_batch_form_inherit' model = 'ir.ui.view'>
            <field name="name">stock.picking.batch.form.inherit</field>
            <field name="model">stock.picking.batch</field>
            <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name ='scheduled_date']" position="replace">
                    <field name="dock_id" placeholder="Dock A" />
                    <field name="vehicle_id" placeholder="Opel GJ45XC1234" />
                    <field name="vehicle_category_id" placeholder="Semi-Truck (250kg, 30m³)"/>
                <label for='weight' invisible = "not vehicle_category_id"/>
                    <div class='d-flex flex-row justify-content-between' invisible = "not vehicle_category_id">
                        <div class='d-flex flex-row gap-2'>
                            <div class='d-flex flex-row gap-1'>
                                <field name='weight'/>
                                <span>kg</span>
                            </div>
                            <field name='weight_percent' widget='progressbar' />
                        </div>
                    </div>

                    
                <label for='volume' invisible = "not vehicle_category_id"/>
                    <div class='d-flex flex-row justify-content-between' invisible = "not vehicle_category_id">
                        <div class='d-flex flex-row gap-2'>
                            <div class='d-flex flex-row gap-1'>
                                <field name='volume'/>
                                <span>m³</span>
                            </div>
                            <field name='volume_percent' widget='progressbar' />
                        </div>
                    </div>

                </xpath>
            </field>
        </record>



<!-- graph view -->
        <record id="stock_picking_batch_graph_view" model="ir.ui.view">
            <field name="name">stock.picking.batch.graph.view</field>
            <field name="model">stock.picking.batch</field>
            <field name="arch" type="xml">
                <graph string="batch transfer" type="bar">
                    <field name="scheduled_date" string="days" type="row"/>
                    <field name="vehicle_category_id" string="vehicle category" />
                    <field name="weight" string="Weight" type="measure" />
                    <field name="volume" string="Volume" type="measure" />
                    <!-- <field name="lines" string="# Lines" type="measure" />
                    <field name="transfers" string="#Transfers" type="measure"/> -->
                </graph>
            </field>
        </record>

<!-- gantt view  -->

        <record id="stock_picking_batch_gantt_view" model="ir.ui.view">
            <field name="name">stock.picking.batch.gantt.view</field>
            <field name="model">stock.picking.batch</field>
            <field name="arch" type="xml">
                <gantt date_stop="create_date" 
                date_start="scheduled_date" 
                decoration-success="state == 'done'" 
                decoration-info="state == 'draft'"
                color="vehicle_id"
                default_group_by="dock_id,vehicle_category_id">
                    <templates>
                        <div t-name="gantt-popover-details">
                            <field name="name"/>
                            <field name="state"/>
                        </div>
                    </templates> 
                </gantt>
            </field>
        </record>

    </data>
</odoo>