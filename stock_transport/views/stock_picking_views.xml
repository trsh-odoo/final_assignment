<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- inherited tree view -->

        <record id = 'stock_picking_batch_tree_inherit' model = 'ir.ui.view'>
            <field name="name">stock.picking.batch.tree.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='origin']" position="after">
                    <field name="volume"/>
                    <field name="weight" string="Weight for Shipping"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>